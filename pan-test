#!/usr/bin/python
import argparse
import os
import sys
import subprocess

HERE = os.path.dirname(__file__)

CONFIG = {
    'EN' : ['-H119', '-e30', '-M', 'en', '--pan-hedge=0.04',
            '--control-corpus', 'corpus/control/EN'],
    'GR' : ['-H139', '-e30', '-M', 'gr', '--pan-hedge=0.04',
            '--control-corpus', 'corpus/control/GR'],
    'SP' : ['-H139', '-e30', '-M', 'es', '--pan-hedge=0.04',
            '--control-corpus', 'corpus/control/SP'],
    'DU' : ['-H99', '-e20', '-M', 'nl', '--pan-hedge=0.07',
            '--control-corpus', 'corpus/control/DU'],
}

CMD = ['./train-net', '-n', 'pan', '--batch-size=40',
       '-l1e-1', '-L-1', '--leakage-decay=0.9',
       '--learning-method=4', '-d50', '--ignore-start=10',
       '--presynaptic-noise=1.0', '--try-swapping-texts',
       '--pan-output']


def main():
    parser = argparse.ArgumentParser()
    parser.add_argument('-i', '--input-dir', help="find testing corpus here")
    parser.add_argument('-o', '--output-dir', help="write results here")

    args = parser.parse_args()

    commands = []
    for subdir in os.listdir(args.input_dir):
        if not os.path.isdir(os.path.join(args.input_dir, subdir)):
            continue
        if subdir[:2] in CONFIG and subdir[2:].isdigit():
            key = subdir[:2]
            break

    cmd = CMD + CONFIG[key] + [args.input_dir]
    commands.append(cmd)
    print >> sys.stderr, "running %s" % (' '.join(cmd))
    output_file = open(os.path.join(args.output_dir, "answers.txt"), "w")
    for cmd in commands:
        subprocess.call(cmd, stdout=output_file)

    output_file.close()


main()
